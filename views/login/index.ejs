<!DOCTYPE html>
<html>

<head>
    <link rel="icon" type="image/png" href="/favicon.png">
    <script src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #001420, #030b13);
            color: #fff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: #fff;
            color: #333;
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .login-container h1 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        form label {
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        form input {
            margin-bottom: 1rem;
            padding: 0.8rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            outline: none;
            transition: 0.3s;
        }

        form input:focus {
            border-color: #4f93c0;
        }

        button {
            padding: 0.8rem;
            background-color: #0099ff;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background-color: #28527a;
        }

        a {
            text-align: center;
            display: block;
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #4f93c0;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            .login-container {
                padding: 1.5rem;
            }

            form input,
            button {
                font-size: 0.9rem;
                padding: 0.7rem;
            }
        }
    </style>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <div class="login-container">
        <h1>Login</h1>
        <form method="POST">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />

            <label for="password">Password</label>
            <input type="password" id="password" name="password" required />

            <button id="loginBtn">Login</button>
            <a class="nav-link" href="/SignUp">NÃ£o tens uma conta? Regista-te aqui</a>
        </form>
        <div id="error_message" style="display: none; border:red 3px solid;"></div>
    </div>
</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var userType = "<%= userType %>";
        if (userType) {
            if (userType === 'paciente') {
                window.location.href = "/chats";
            } else if (userType === 'medico') {
                window.location.href = "/chats";
            } else if (userType === 'organizacao') {
                window.location.href = "/get_news";
            } else if (userType === 'admin') {
                window.location.href = "/users";
            }
        }
    });

    $("#loginBtn").click((e) => {
        e.preventDefault();
        $.ajax({
            method: "POST",
            url: "/login",
            data: {
                email: $("#email").val(),
                password: $("#password").val(),
            },
            cache: false,
            headers: { "Cache-Control": "no-cache, no-store, must-revalidate", "Pragma": "no-cache", "Expires": "0" }
        }).done((res) => {
            console.log(res);


            switch (res.type) {
                case "paciente":
                    window.location.href = "/home";
                    break;
                case "medico":
                    window.location.href = "/chats";
                    break;
                case "organizacao":
                    window.location.href = "/get_news";
                    break;
                case "admin":
                    window.location.href = "/users";
                    break;
                default:
                    window.location.href = "/";
            }
        }).fail((err) => {
            console.log(err);
            $("#error_message").text("Wrong username or password").show();
        });
    })

</script>

</html>